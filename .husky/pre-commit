#!/usr/bin/env sh
. "$(dirname "$0")/_/husky.sh"

# Skip frontend lint if frontend/node_modules isn't installed to avoid blocking commits in dev envs
if [ -d "frontend/node_modules" ]; then
  npx --no-install lint-staged
else
  echo "Skipping frontend lint: frontend/node_modules not found. Run 'npm --prefix frontend ci' to enable linting."
fi
