{
  "name": "autopromote-server",
  "homepage": "https://Tibule12.github.io/AutoPromote",
  "version": "1.0.0",
  "description": "Back-end for AutoPromote platform",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "npm run test:unit",
    "deploy": "firebase deploy",
    "build": "npm run clean && npm run compile",
    "postinstall": "npm install --prefix frontend && npm run build --prefix frontend",
    "clean": "rimraf dist",
    "compile": "mkdir dist && copy *.js dist\\ && copy *.json dist\\",
    "test:integration": "node runTests.js",
    "test:unit": "node test/basic-sanity.js",
    "test:routes": "node test/route-imports.test.js",
    "test:payments": "node test/payments-routes.test.js",
    "test:profile": "node test/profile-defaults-and-notifications.test.js",
    "test:captions": "node test/captions-routes.test.js",
    "test:captions-download": "node test/captions-download.test.js",
    "test:paypal-webhook": "node test/paypal-webhook.test.js",
    "test:paypal-webhook-verify": "node test/paypal-webhook-verification.test.js",
    "test:admin-cache": "node test/admin-cache-routes.test.js",
    "test:env-validator": "node test/env-validator.test.js",
    "preflight": "node scripts/preflight-critical-files.js",
    "ci": "npm run preflight && npm run test:unit && npm run test:routes && npm run test:captions && npm run test:captions-download && npm run test:paypal-webhook && npm run test:paypal-webhook-verify && npm run test:admin-cache && npm run test:env-validator",
    "security:audit": "node scripts/securityAudit.js",
    "deadletter:replay": "node scripts/replayDeadLetterTasks.js",
    "simulate:variants": "node test/simulateVariantSelection.js",
    "generate:secret": "node scripts/generateSecret.js 96",
    "demo": "node scripts/start-demo.js",
    "postdeploy:set-telegram-webhook": "node scripts/set-telegram-webhook.js"
  },
  "private": true,
  "dependencies": {
    "@paypal/paypal-server-sdk": "^0.6.0",
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.1",
    "firebase": "^12.2.1",
    "firebase-admin": "^13.5.0",
    "fluent-ffmpeg": "^2.1.3",
    "googleapis": "^160.0.0",
    "ioredis": "^5.3.2",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "node-fetch": "^2.7.0",
    "react-router-dom": "^7.8.2",
    "sharp": "^0.32.6",
    "streamifier": "^0.1.1",
    "uuid": "^13.0.0",
    "express-rate-limit": "^8.1.0"
  },
  "devDependencies": {
    "firebase-tools": "^14.15.1",
    "jest": "^30.2.0",
    "nodemon": "^3.1.10",
    "rimraf": "^6.0.1",
    "supertest": "^7.1.4"
  }
}
