    "discord-interactions": "^4.4.0",
    "dotenv": "^16.6.1",
    "express": "^4.18.1",
    "express-rate-limit": "^6.8.0",
    "firebase": "^12.2.1",
    "firebase-admin": "^13.5.0",
    "fluent-ffmpeg": "^2.1.3",
    "form-data": "^4.0.1",
    "googleapis": "^160.0.0",
    "ioredis": "^5.3.2",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "node-fetch": "^2.7.0",
    "nodemailer": "^7.0.10",
    "puppeteer": "^24.27.0",
    "resend": "^4.0.0",
    "streamifier": "^0.1.1",
    "uuid": "^13.0.0"
