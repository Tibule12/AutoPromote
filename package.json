{
  "name": "autopromote-server",
  "homepage": "https://Tibule12.github.io/AutoPromote",
  "version": "1.0.0",
  "description": "Back-end for AutoPromote platform",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "npm run test:unit",
    "deploy": "firebase deploy",
    "build": "npm run clean && npm run compile",
    "postinstall": "npm install --prefix frontend && npm run build --prefix frontend",
    "clean": "rimraf dist",
    "compile": "mkdir dist && copy *.js dist\\ && copy *.json dist\\",
    "test:integration": "node runTests.js",
    "test:unit": "node test/basic-sanity.js",
  "test:routes": "node test/route-imports.test.js",
  "test:payments": "node test/payments-routes.test.js",
  "test:profile": "node test/profile-defaults-and-notifications.test.js",
    "preflight": "node scripts/preflight-critical-files.js",
    "ci": "npm run preflight && npm run test:unit && npm run test:routes"
  },
  "dependencies": {
    "@paypal/paypal-server-sdk": "^0.6.0",
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.1",
    "firebase": "^12.2.1",
    "firebase-admin": "^13.5.0",
    "fluent-ffmpeg": "^2.1.3",
    "googleapis": "^160.0.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "node-fetch": "^2.7.0",
    "react-router-dom": "^7.8.2",
    "streamifier": "^0.1.1",
    "stripe": "^18.5.0"
  },
  "devDependencies": {
    "firebase-tools": "^14.15.1",
    "nodemon": "^2.0.16",
    "rimraf": "^6.0.1"
  }
}
